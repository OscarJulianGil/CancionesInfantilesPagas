<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_menus"
    tools:context="cancionesinfantiles.toycantando.Compras_Activity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnizquierda"
            android:layout_width="@dimen/btnderecha_layout_width"
            android:layout_height="@dimen/btnderecha_layout_height"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/btnizquierda_layout_marginLeft"
            android:layout_centerInParent="true"
            android:background="@drawable/izquierda"/>

        <Button
            android:id="@+id/btnderecha"
            android:layout_width="@dimen/btnderecha_layout_width"
            android:layout_height="@dimen/btnderecha_layout_height"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/btnderecha_layout_marginRight"
            android:layout_centerInParent="true"
            android:background="@drawable/derecha"/>
    </RelativeLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
